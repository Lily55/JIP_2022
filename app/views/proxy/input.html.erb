<h2>Введите n <= 10^6:</h2>

<%= form_with url: "/proxy/show", method: :get do |form| %>
  <%= form.label :n, "n:".upcase %>
  <%= form.number_field :upper, in: 1..10**6, step: 1 %>
  <%= form.submit "Выполнить", class: 'btn btn-primary' %>

  <select class="custom-select" name = "side">
      <option value = "server">Server XSLT</option>
      <option value = "client-with-xslt">Client XSLT</option>
      <option value = "client">RAW</option>
  </select>
<% end %>