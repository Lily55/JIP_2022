
<div style="text-align: center"><h1 style="text-align: center">Вход</h1>
<%unless flash[:notice].blank?%>
  <h2 style = 'color:red'><%=flash[:notice]%></h2>
<%end%>

<%=form_with scope: :session, url: session_path, data: { turbo: false} do |f|%>
		<%unless flash[:success].blank?%>
			<h2 style = 'color:green'><%=flash[:success]%></h2>
		<%end%>
	
		<div>
			<%=f.text_field :username, require: true, id: 'Username', placeholder: "Логин" %><br/>
		</div>
		<div>
			<%=f.password_field :password, require: true, id: 'Password', placeholder: "Пароль"%><br/>
		</div>
        <br>
		<div>
			<%=f.submit :password, value: 'Войти',require: true%>
		</div>
	
<%end%>
<ul class="log">
    <li><a><%= link_to 'Регистрация', new_user_path%></a></li>
	<li><a><%= link_to 'Назад', home_path%></a></li>
	<li><a><%= link_to 'Забыли пароль?', new_password_reset_path%></a></li>
</ul>
</div>
