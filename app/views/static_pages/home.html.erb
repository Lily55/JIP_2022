<h1>StaticPages#home</h1>
<%unless flash[:success].blank?%>
  <h2 style = 'color:green'><%=flash[:success]%></h2>
<%end%>

<% if current_user.present?%>
<p><%= "@#{current_user.username}"%></p>
<p><%= link_to "Посмотреть профиль", current_user%></p>
<p><%= button_to 'Выйти', session_path, method: :delete%></p>
<% else%>
<p><%= link_to "Вход", new_session_path%></p>
<p><%= link_to "Регистрация", new_user_path%></p>
<% end %>
