<p style="color: green"><%= notice %></p>

<div class='container'>
  <div class='row'>
    <div class= "col-6">
    
      <%= render @post %>


      <div>
        <% if current_user.present? && current_user.admin == true || current_user.present? && current_user.id == @post.user_id%>
        <%= link_to "Редактировать", edit_post_path(@post) %> |
        <% end %>
        <%= link_to "К другим новостям", news_path%>
        <br>
        <br>
        <% if current_user.present? && current_user.admin == true || current_user.present? && current_user.id == @post.user_id%>
        <%= button_to "Удалить", @post, method: :delete %>
        <% end%>
      </div>

    </div>
  </div>
</div>