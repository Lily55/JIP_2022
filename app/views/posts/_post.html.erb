<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Summary:</strong>
    <%= post.summary %>
  </p>

  <% if current_page?(controller: 'posts', action: 'show', id: post.id)%>
    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>
  <% end%>

  <p>
    <strong>User:</strong>
    <% user = User.find_by(id: post.user_id) %>
    <%= user.username %>
  </p>

</div>
